<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/background"
    tools:context="com.example.aldy.project.Menu">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/button_tambah"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pilihan" />

        <Button
            android:id="@+id/button_view"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_below="@id/button_tambah"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tambah" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:background="#ede9e9"
        android:layout_alignParentBottom="true"></LinearLayout>

</RelativeLayout>
